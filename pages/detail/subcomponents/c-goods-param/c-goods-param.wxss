.c-goods-param{
  padding: 40rpx 30rpx;
  font-size: 28rpx;
  border-bottom: 10rpx solid #f2f5f8;
}
.size,
.info{
  display: flex;
  height: 100rpx;
  border-bottom: 2rpx solid rgba(100, 100, 100, 0.1);
}
.size-item,
.info-item{
  flex:1;
}
.size-param,
.info-item:nth-of-type(1){
  line-height: 100rpx;
}
.info-item:nth-of-type(2){
  color: #ff5777;
  overflow: hidden;
}